{
  "name": "verna-examples-playground",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "verna:build:check": "yarn workspace @openfun/verna build:check",
    "start": "vite",
    "i18n:extract": "yarn formatjs extract --id-interpolation-pattern '[sha512:contenthash:base64:6]' --format crowdin './src/**/*.ts*' --out-file ./i18n/frontend.json",
    "i18n:compile": "yarn formatjs compile-folder --format crowdin ./i18n/locales ./src/translations",
    "lint:stylelint": "stylelint 'src/**/*.scss'",
    "prelint:eslint": "yarn verna:build:check",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint": "yarn lint:stylelint && yarn lint:eslint"
  },
  "dependencies": {
    "@openfun/verna": "0.0.0",
    "@rjsf/core": "4.2.3",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@formatjs/cli": "5.0.7",
    "@types/react": "17.0.45",
    "@types/react-dom": "17.0.17",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "@vitejs/plugin-react": "2.0.0",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.4.0",
    "eslint-plugin-compat": "4.0.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.30.1",
    "sass": "1.54.3",
    "stylelint": "14.9.1",
    "stylelint-config-standard": "26.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.7.4",
    "vite": "3.0.4"
  }
}
